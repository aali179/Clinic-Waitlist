<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employeeSetHours">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:srcCompat="@drawable/rectangle" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mondayStartTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Monday Start" />

            <Button
                android:id="@+id/mondayEndTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Monday End" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tuesdayStartTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="tues start" />

            <Button
                android:id="@+id/tuesdayEndTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="tues end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wednesdayStartTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="wed start" />

            <Button
                android:id="@+id/wednesdayEndTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="wed end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/thursdayStartTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="thurs start" />

            <Button
                android:id="@+id/thursdayEndTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="thurs end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fridayStartTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Fri Start" />

            <Button
                android:id="@+id/fridayEndTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Fri End" />

        </LinearLayout>

        <TextView
            android:id="@+id/mondayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Monday Times: " />

        <TextView
            android:id="@+id/tuesdayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Tuesday Times: " />

        <TextView
            android:id="@+id/wednesdayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Wednesday Times: " />

        <TextView
            android:id="@+id/thursdayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Thursday Times: " />

        <TextView
            android:id="@+id/fridayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Friday Times: " />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>