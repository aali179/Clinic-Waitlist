<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editEmployeeProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/clinicNameUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Clinic Name"/>

        <EditText
            android:id="@+id/clinicEmailUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email Address"/>

        <EditText
            android:id="@+id/clinicNumberUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"/>

        <EditText
            android:id="@+id/clinicAddressUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Address"/>

        <Spinner
            android:id="@+id/insuranceSpinnerUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/paymentSpinnerUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/clinicPasswordUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-enter Password"/>

        <Button
            android:id="@+id/updateEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Information"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>